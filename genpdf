#!/usr/bin/env bash
# genpdf - Generate PDF files from Jupyter notebooks in Quarto projects.

# Exit immediately on errors
set -e

# Function to check if required dependencies are installed
require() {
  for cmd in "$@"; do
    if ! command -v "$cmd" &> /dev/null; then
      echo "Error: '$cmd' is not installed or not in PATH." >&2
      exit 127
    fi
  done
}

# Function to print usage
usage() {
  cat << EOF
Usage: ${0} <dir1> ... <dirn>
Convert Jupyter notebooks in Quarto project directories to PDF.

Arguments:
  <dir1> ... <dirn>  Quarto project directories containing _quarto.yml
EOF
  exit 1
}

# Check required dependencies
require find quarto tee

# Validate input arguments
if [ "$#" -eq 0 ]; then
  usage
fi

# Create a temporary log file
LOG_FILE=$(mktemp -t genpdf_log.XXXXXX)

# Initialize exit code
declare -i exitcode=0

# Iterate over provided directories
for proj in "$@"; do
  echo "Processing '${proj}'..."

  if [ -f "${proj}/_quarto.yml" ]; then
    find "${proj}" -maxdepth 1 -name "*.ipynb" -type f -exec quarto convert {} \;

    if ! quarto render "${proj}" --to pdf 2>&1 | tee -a "${LOG_FILE}"; then
      exitcode=1
    fi
  else
    echo "Error: '${proj}' is not a Quarto project (missing _quarto.yml)." >&2
    exitcode=1
  fi
done

# Display error message if any failures occurred
if [ "$exitcode" -ne 0 ]; then
  echo "Errors occurred while generating PDFs. See log: ${LOG_FILE}"
fi

exit "$exitcode"
